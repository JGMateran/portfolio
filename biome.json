{
	"$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"ignore": ["node_modules", ".next", "dist"]
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": true,
		"ignore": ["node_modules", ".next", "dist"]
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"quoteStyle": "single",
			"trailingCommas": "all"
		}
	}
}
